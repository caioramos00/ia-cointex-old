<!-- Updated contact.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <title>Conversa com <%= contato.id %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    .chat-container {
      max-height: 500px;
      overflow-y: auto;
      border: 1px solid #ddd;
      padding: 10px;
      background-color: #f9f9f9;
    }
    .message {
      margin-bottom: 15px;
      padding: 10px;
      border-radius: 10px;
      max-width: 80%;
    }
    .user-message {
      background-color: #dcf8c6;
      margin-right: auto;
      text-align: left;
    }
    .bot-message {
      background-color: #ffffff;
      margin-left: auto;
      text-align: right;
    }
    .timestamp {
      font-size: 0.8em;
      color: #888;
    }
  </style>
</head>
<body class="container mt-5">
  <h1>Conversa com <%= contato.id %></h1>
  <p><strong>Progresso:</strong> <%= progresso.toFixed(0) %>%</p>
  <p><strong>Etapa Atual:</strong> <%= contato.etapa_atual %></p>
  <p><strong>Status:</strong> <%= contato.status %></p>
  <p><strong>Última Interação:</strong> <%= new Date(contato.ultimaInteracao).toLocaleString() %></p>

  <h2>Histórico da Conversa</h2>
  <div class="chat-container" id="chat-container">
    <% 
      // Combinar e ordenar histórico de usuário e bot
      const allMessages = [];
      
      // Adicionar mensagens do usuário (de 'historico')
      if (contato.historico && Array.isArray(contato.historico)) {
        contato.historico.forEach(h => {
          allMessages.push({
            type: 'user',
            data: new Date(h.data).toLocaleString(),
            mensagem: h.mensagem || '[mídia]',
            timestamp: new Date(h.data).getTime()
          });
        });
      }
      
      // Adicionar mensagens do bot (de 'historico_interacoes')
      if (contato.historico_interacoes && Array.isArray(contato.historico_interacoes)) {
        contato.historico_interacoes.forEach(h => {
          allMessages.push({
            type: 'bot',
            data: new Date(h.data).toLocaleString(),
            mensagem: h.mensagem,
            timestamp: new Date(h.data).getTime(),
            tem_midia: h.tem_midia ? ' (com mídia)' : ''
          });
        });
      }
      
      // Ordenar por timestamp (data)
      allMessages.sort((a, b) => a.timestamp - b.timestamp);
      
      // Exibir as mensagens ordenadas
      allMessages.forEach(msg => { %>
        <div class="message <%= msg.type === 'user' ? 'user-message' : 'bot-message' %>">
          <strong><%= msg.type === 'user' ? 'Usuário' : 'Bot' %>:</strong> <%= msg.mensagem %><%= msg.tem_midia || '' %><br>
          <span class="timestamp"><%= msg.data %></span>
        </div>
      <% });
    %>
  </div>

  <a href="/dashboard" class="btn btn-secondary mt-3">Voltar</a>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.emit('join_contact', '<%= contato.id %>');

    socket.on('new_user_message', (msg) => {
      const chatContainer = document.getElementById('chat-container');
      const newMsg = document.createElement('div');
      newMsg.classList.add('message', 'user-message');
      newMsg.innerHTML = `<strong>Usuário:</strong> ${msg.mensagem}${msg.tem_midia ? ' (com mídia)' : ''}<br><span class="timestamp">${new Date(msg.data).toLocaleString()}</span>`;
      chatContainer.appendChild(newMsg);
      chatContainer.scrollTop = chatContainer.scrollHeight;
    });

    socket.on('new_bot_message', (msg) => {
      const chatContainer = document.getElementById('chat-container');
      const newMsg = document.createElement('div');
      newMsg.classList.add('message', 'bot-message');
      newMsg.innerHTML = `<strong>Bot:</strong> ${msg.mensagem}${msg.tem_midia ? ' (com mídia)' : ''}<br><span class="timestamp">${new Date(msg.data).toLocaleString()}</span>`;
      chatContainer.appendChild(newMsg);
      chatContainer.scrollTop = chatContainer.scrollHeight;
    });
  </script>
</body>
</html>